{% extends 'base.html.twig'%}
{% form_theme form 'bootstrap_5_layout.html.twig' %}

{% block title %}Ajouter une critique{% endblock %}
{% block content %}

    <div class="col-lg-4 mx-auto">
        <p class="lead mb-6 text-muted">Ajouter une critique sur le film ({{movieById.title}})</p>
    </div>

    <div class="container">
        <div class="row">
            <div class="col">
                  {{ form_start(form) }}

                {{ form_widget(form) }} 
                    <button type="submit" align="right" class="btn btn-dark">Envoyer ma critique</button>

                {{ form_end(form) }}
            </div>
        </div>
    </div>

{% endblock %}