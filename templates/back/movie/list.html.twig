{% extends 'base.html.twig' %}

{% block title %}Liste des films{% endblock %}

{% block content %}
<h1 class="text-center text-muted fw-bold mb-4">Liste des films et séries</h1>
<div class="example-wrapper">
      <table class="table table-hover table-striped mt-4">
        <thead class="thead-dark">
          <tr>
            <th scope="col">#</th>
            <th scope="col">Titre</th>
            <th scope="col">Actions</th> 
          </tr>
        </thead>
        <tbody>
          {% for movie in movies %}
            <tr>
              <td>{{ movie.id }}</td>
              <td>
                <a href="#">{{ movie.title }}</a>
              </td>
              <td>
                <a href="{{ path('app_back_movie_update', {id:movie.id}) }}" class="btn btn-warning btn-sm">Editer</a>
                <a href="{{ path('app_back_movie_delete', {id: movie.id}) }}" class="btn btn-danger btn-sm">Supprimer</a>
              </td>
            </tr>
          {% endfor %}
        </tbody>
      </table>
       <div class="d-grid gap-2 col-2 mx-auto">
          <ul class="d-flex flex-column flex-wrap list-unstyled justify-content-center">
            <a class="btn btn-success btn-sm" href="{{ path('app_back_movie_create') }}">Ajouter un nouveau film/série</a>
          </ul>
        </div>
</div>
{% endblock %}